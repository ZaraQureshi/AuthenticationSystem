{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "outDir": "./dist", // ðŸ‘ˆ All JS files will go into ./dist
        "rootDir": "./src", // ðŸ‘ˆ Where your .ts files are
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
